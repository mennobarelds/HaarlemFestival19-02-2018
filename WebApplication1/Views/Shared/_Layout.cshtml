<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    @Styles.Render("~/Content/stylesheetspec.css")

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script></head>
<body>
    <section id="homepage">
        <div class="container-fluid">
            <div id="navrow" class="row">
                <div id="navbar">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">

                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Jazz@Patronaat", "About", "Index")</li>
                                <li>@Html.ActionLink("Dinner in Haarlem", "Contact", "Index")</li>
                                <li>@Html.ActionLink("Talking Haarlem", "Contact", "Index")</li>
                                <li>@Html.ActionLink("Historic Haarlem", "Contact", "Index")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Index")</li>
                                <li>@Html.ActionLink("Basket", "Contact", "Index")</li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            <!-- BACKGROUND SLIDER -->
            <div class="row">
                <div id="title">
                    <div class="container">
                        <img src="/images/home/titel.png" />
                    </div>
                </div>
                <div id="slider" class="container-fluid">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="/images/home/slider1.jpg" style="width:100%;">
                            </div>

                            <div class="item">
                                <img src="/images/home/slider2.jpg" style="width:100%;">
                            </div>

                            <div class="item">
                                <img src="/images/home/slider3.jpg" style="width:100%;">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END SLIDER -->
            <div class="container body-content">
                @RenderBody()
                @RenderSection("scripts", required: false)
            </div>

            <div class="row">
                <div id="footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <h2>Navigation</h2>
                                <ul>
                                    <li class="active"><a href="#">Home</a></li>
                                    <li><a href="#">Jazz@Patronaat</a></li>
                                    <li><a href="#">Dinner in Haarlem</a></li>
                                    <li><a>Talking Haarlem</a></li>
                                    <li><a href="#">Historic Haarlem</a></li>
                                    <li><a href="#">Contact</a></li>
                                    <li><a href="#">Basket</a></li>
                                </ul>
                            </div>
                            <div class="col-md-3">
                                <h2>Contact</h2>
                                <p>info@haarlemfestival.nl<br /> +31 023 - 5241020</p>
                                <p>
                                    Head Office<br /> Zijlweg 7<br /> 1234 AA Haarlem
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h2>Locations</h2>
                                <div id="map">
                                    <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyB3bik2GuwnimyugRz6gVBzwGuNG8lUT2c'></script>
                                    <div style='overflow:hidden;height:200px;width:550px;'>
                                        <div id='gmap_canvas' style='height:200px;width:550px;'></div>
                                        <style>
                                            #gmap_canvas img {
                                                max-width: none !important;
                                                background: none !important;
                                            }
                                        </style>
                                    </div> <a href='https://mapswebsite.org/'>`</a>
                                    <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=53eb8c293802dddfd7def14ae940bfa86096511a'></script>
                                    <script type='text/javascript'>
                                        function init_map() {
                                            var myOptions = {
                                                zoom: 12,
                                                center: new google.maps.LatLng(52.39222755270234, 4.639063382031279),
                                                mapTypeId: google.maps.MapTypeId.ROADMAP
                                            };
                                            map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
                                            marker = new google.maps.Marker({
                                                map: map,
                                                position: new google.maps.LatLng(52.39222755270234, 4.639063382031279)
                                            });
                                            infowindow = new google.maps.InfoWindow({
                                                content: '<strong>Locations</strong><br>Grote Markt<br> Haarlem<br>'
                                            });
                                            google.maps.event.addListener(marker, 'click', function () {
                                                infowindow.open(map, marker);
                                            });
                                            infowindow.open(map, marker);
                                        }
                                        google.maps.event.addDomListener(window, 'load', init_map);
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

</body>
</html>
