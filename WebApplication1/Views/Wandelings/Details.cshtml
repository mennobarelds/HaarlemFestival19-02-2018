@model WebApplication1.Models.Wandeling

@{
    ViewBag.Title = "Details";
}

<h1>Historic Haarlem</h1>

<div class="row">
    <div id="content-block">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="jazztitle">
                        <div class="row">
                            <div class="col-md-6">
                                <h2>Historic Haarlem</h2>
                                <p>Welcome on the Historic Haarlem page, here you will find information about the historic tour through Haarlem. Here you will find information about: the locations, the available days and the available languages.</p>
                            </div>
                            <div class="col-md-2">
                                <img src="~/images/historic_haarlem/u1238.png" />
                            </div>
                            <div class="col-md-2">
                                <img src="~/images/historic_haarlem/u1236.png" />
                            </div>
                            <div class="col-md-2">
                                <img src="~/images/historic_haarlem/u1234.png" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="contentbreak">
                        <div class="col-md-8 col-md-offset-3">
                            <img src="~/images/historic_haarlem/title_locations_u1176.jpg" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="contentbreak">
                        <div class="col-md-2 col-md-offset-5">
                            <button>@Html.ActionLink("Location", "Index")</button>
                            <button>@Html.ActionLink("Map", "Details")</button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="panels">
                        <div class="col-md-8">
                            <img src="~/images/historic_haarlem_map/Map.png" style="width:100%" />
                        </div>
                        <div class="col-md-4">
                           
                           
                            <img src="~/images/historic_haarlem_map/p8.jpg" style="width:100%" />

                            <h2>About the tour</h2>

                            <p>The Grote Markt is in the center of Haarlem, with the City Hall across from the St. Bavochurch.</p>


                            <button>@Html.ActionLink("Book Tour", "BookTour")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
